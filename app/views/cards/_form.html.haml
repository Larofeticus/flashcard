= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    %br
    = f.text_area :question, rows: '3', cols: '50'
  .field
    = f.label :answer
    %br
    = f.text_area :answer, rows: '3', cols: '50'
  .field
    = f.label :citation
    %br
    = f.text_area :citation, rows: '3', cols: '50'
  .actions
    = f.submit 'Save'
